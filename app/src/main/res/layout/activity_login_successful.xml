<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.shouryakhare.cs2340_rat_app.Controller.LoginSuccessfulActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/loginSuccessful_recyclerView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/loginSuccessful_logoutButton" />

    <Button
        android:id="@+id/loginSuccessful_logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="78dp"
        android:layout_marginRight="96dp"
        android:fontFamily="casual"
        android:text="@string/loginSuccessful_homeButton"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RelativeOverlap,RtlHardcoded"
        tools:layout_editor_absoluteY="13dp" />

    <Button
        android:id="@+id/loginSuccessful_addReportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:fontFamily="casual"
        android:text="@string/loginSuccessful_addReportButton"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
