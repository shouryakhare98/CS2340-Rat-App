<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shouryakhare.cs2340_rat_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.LoginSuccessfulActivity"
            android:label="@string/title_activity_login_successful"
            android:parentActivityName=".Controller.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shouryakhare.cs2340_rat_app.Controller.MainActivity" />
        </activity>
        <activity
            android:name=".Controller.RegistrationActivity"
            android:label="RegistrationActivity"
            android:parentActivityName=".Controller.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shouryakhare.cs2340_rat_app.Controller.MainActivity" />
        </activity>
        <activity
            android:name=".Controller.ExpandedRatSightingActivity"
            android:label="@string/title_activity_expanded_rat_sighting"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.ReportSightingActivity"
            android:label="@string/title_activity_report_sighting"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.NewLoginSuccessfulActivity"
            android:label="@string/title_activity_new_login_successful"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>